<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen_text_example"
        style="@style/calculatorScreen"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/button_number_seven"
            style="@style/calculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="25"
            android:text="@string/main_screen_btn_text_seven" />

        <Button
            android:id="@+id/button_number_eight"
            style="@style/calculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="25"
            android:text="@string/main_screen_btn_text_eight" />

        <Button
            android:id="@+id/button_number_nine"
            style="@style/calculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="25"
            android:text="@string/main_screen_btn_text_nine" />

        <Button
            android:id="@+id/button_function_sum"
            style="@style/calculatorOperationsButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="25"
            android:text="@string/main_screen_btn_text_sum" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/button_number_four"
            style="@style/calculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="25"
            android:text="@string/main_screen_btn_text_four" />

        <Button
            android:id="@+id/button_number_five"
            style="@style/calculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="25"
            android:text="@string/main_screen_btn_text_five" />

        <Button
            android:id="@+id/button_number_six"
            style="@style/calculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="25"
            android:text="@string/main_screen_btn_text_six" />

        <Button
            android:id="@+id/button_function_minus"
            style="@style/calculatorOperationsButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="25"
            android:text="@string/main_screen_btn_text_minus" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/button_number_one"
            style="@style/calculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="25"
            android:text="@string/main_screen_btn_text_one" />

        <Button
            android:id="@+id/button_number_two"
            style="@style/calculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="25"
            android:text="@string/main_screen_btn_text_two" />

        <Button
            android:id="@+id/button_number_three"
            style="@style/calculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="25"
            android:text="@string/main_screen_btn_text_three" />

        <Button
            android:id="@+id/button_function_multiplication"
            style="@style/calculatorOperationsButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="25"
            android:text="@string/main_screen_btn_text_multiplication" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/button_number_zero"
            style="@style/calculatorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="25"
            android:text="@string/main_screen_btn_text_zero" />

        <Button
            android:id="@+id/button_function_divide"
            style="@style/calculatorOperationsButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="25"
            android:text="@string/main_screen_btn_text_split" />

        <Button
            android:id="@+id/button_function_erase"
            style="@style/calculatorOperationsButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="25"
            android:text="@string/main_screen_btn_text_erase" />

        <Button
            android:id="@+id/button_function_result"
            style="@style/calculatorOperationsButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="25.00"
            android:text="@string/main_screen_btn_text_result" />
    </LinearLayout>
</LinearLayout>


