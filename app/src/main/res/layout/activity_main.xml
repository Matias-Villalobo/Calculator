<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            style="@style/calculatorScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="4">

            <Button
                android:id="@+id/button1"
                style="@style/calculatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_screen_btn_text_seven" />

            <Button
                android:id="@+id/button2"
                style="@style/calculatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_screen_btn_text_eight" />

            <Button
                android:id="@+id/button3"
                style="@style/calculatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_screen_btn_text_nine" />

            <Button
                android:id="@+id/button4"
                style="@style/calculatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_screen_btn_text_sum" />

            <Button
                android:id="@+id/button5"
                style="@style/calculatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_screen_btn_text_four" />

            <Button
                android:id="@+id/button6"
                style="@style/calculatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_screen_btn_text_five" />

            <Button
                android:id="@+id/button7"
                style="@style/calculatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_screen_btn_text_six" />

            <Button
                android:id="@+id/button8"
                style="@style/calculatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_screen_btn_text_minus" />

            <Button
                android:id="@+id/button9"
                style="@style/calculatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_screen_btn_text_one" />

            <Button
                android:id="@+id/button10"
                style="@style/calculatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_screen_btn_text_two" />

            <Button
                android:id="@+id/button11"
                style="@style/calculatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_screen_btn_text_three" />

            <Button
                android:id="@+id/button12"
                style="@style/calculatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_screen_btn_text_multiplication" />

            <Button
                android:id="@+id/button13"
                style="@style/calculatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_screen_btn_text_zero" />

            <Button
                android:id="@+id/button14"
                style="@style/calculatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_screen_btn_text_split" />

            <Button
                android:id="@+id/button15"
                style="@style/calculatorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_screen_btn_text_erase" />
        </GridLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>